{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "CommonJS",
    "target": "ES2018",
    "lib": ["es6", "dom"],
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "outDir": "build",
    "sourceMap": true,
    "resolveJsonModule": true,
    "strict": true,
    "alwaysStrict": true,
    "types": ["reflect-metadata", "node", "jest"],
    "moduleResolution": "node",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
